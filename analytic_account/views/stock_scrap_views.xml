<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_scrap_form_view_inherit_analytic_account" model="ir.ui.view">
        <field name="name">stock.scrap.view.form.inherit</field>
        <field name="model">stock.scrap</field>
        <field name="inherit_id" ref="stock.stock_scrap_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="before">
                <field name="allow_analytic_account_ids" widge="many2many_tags" invisible="1"/>
                <field name="analytic_account_id" domain="[('id','in',allow_analytic_account_ids)]" attrs="{'readonly':[('state','!=','draft')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
